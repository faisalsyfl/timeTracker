        <script>            
            (function(){
                var hasTimer = false;
                var socket = io('http://localhost:3000/');
                var data,date,start_date,start_time,end_date,end_time;
                var options = {
                    hour: "2-digit", minute: "2-digit", hour12: true
                };
                date = new Date();

                // Init timer start
                $('.start-timer-btn').on('click', function() {
                    hasTimer = true;
                    $('.timer').timer({
                        editable: false,
                        format: '%H:%M:%S'
                    });

                    date = new Date();
                    start_date = date.toLocaleDateString(['ban', 'id']);
                    start_time = date.toLocaleTimeString(['ban', 'id'],options);

                    $(this).addClass('hidden');
                    $('.remove-timer-btn').removeClass('hidden');
                });

                // Remove timer
                $('.remove-timer-btn').on('click', function() {
                    hasTimer = false;
                    //console.log($('.timer').data('seconds'));
                    $('.timer').timer('remove');
                    $(this).addClass('hidden');
                    $('.start-timer-btn').removeClass('hidden');
			    });

                $('#form').submit(function(e){
                    e.preventDefault();                    

                    date = new Date();
                    end_date = date.toLocaleDateString(['ban', 'id']);
                    end_time = date.toLocaleTimeString(['ban', 'id'],options);

                    data = {
                        userid : '<%= user.id %>',
                        name : $('#activity').val(),
                        project : $('#project').val(),
                        start_date : start_date,
                        end_date : end_date,
                        start_time : start_time,
                        end_time : end_time,
                        durations : $('.timer').data('seconds')
                    }
                    
                    socket.emit('send task',data);

                    $('#activity').val('');
                    $('#project').val('');
                    $('#durations').val('00:00:00');
                });

                socket.on('new activity',function(data){
                    if(data){
                        $('#record').hide();
                        displayTask(data);
                    }    
                });

                socket.on('load task',function(docs){
                    if(docs){
                        for(var i=0;i<docs.length;i++){
                            displayTask(docs[i]);
                        }
                    }else{
                        $('#log_activity').prepend(
                        '<tr id="no_activity"><td colspan="3"><center>No activity this day</center></td></tr>');
                    }
                });

                socket.emit('userid',{userid:'<%= user.id%>',date_now : date.toLocaleDateString(['ban', 'id'])});
		    
                function displayTask(data){
                    //console.log(data);
                    var hours = parseInt(data.durations/3600);
                    var minutes = parseInt((data.durations%3600)/60);
                    var seconds = parseInt(data.durations%60);
                    var h='',
                        m='',
                        name='(no description)'; 
                    if(hours>0) h = hours+'h';
                    if(minutes>0) m = minutes+'m';
                    if(data.project) name = data.name + '   <span class="label label-primary">'+data.project+'</span>';
                    if(data.project && !data.name) name = '(no description)   <span class="label label-primary">'+data.project+'</span>';

                    if ($('#no_activity')) {
                        $( "#no_activity" ).addClass("hidden");
                    }
                    $('#log_activity').prepend(
                        '<tr><td style="width:70%">'+name+'</td><td>'+h+' '+m+' '+seconds+'s </td><td> '+data.start_time+' - '+data.end_time+'</td></tr>');
                }
                
            })();     
        </script>
